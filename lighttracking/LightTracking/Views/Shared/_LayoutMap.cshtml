<!DOCTYPE html>
<html>
<head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">

    <link rel="stylesheet" href="~/content/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/content/css/mdb.min.css" />
    <link rel="stylesheet" href="~/content/css/site.css" media="screen" asp-append-version="true" />

    <script src="~/content/js/jquery-2.2.3.min.js"></script>

    <style>
         /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
         #map {
             height: 600px;
         }
         /* Optional: Makes the sample page fill the window. */
         html, body {
             height: 100%;
             margin: 0;
             padding: 0;
         }
    </style>

</head>
<body>
    @if (LightTracking.Classes.Utils.IsUserAutenticated())
    {
        <header>
            <!--Navbar-->
            <nav id="main-nav-bar" class="navbar navbar-dark navbar-fixed-top scrolling-navbar mdb-color darken-3" style="padding-bottom:5px;">

                <!-- Collapse button-->
                <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx">
                    <i class="fa fa-bars"></i>
                </button>

                <div class="container">

                    <!--Collapse content-->
                    <div class="collapse navbar-toggleable-xs" id="collapseEx">
                        <!--Navbar Brand-->
                        <a class="navbar-brand" href="/" style="padding-left:10px; padding-right:10px;border-radius:10px; background-color:white;">
                            <img src="~/Content/images/logo.png" class="img-responsive" style="max-width:35px;">
                        </a>
                        <!--Links-->
                        <ul class="nav navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link waves-effect waves-light" href="/call">
                                    <div class="menu-item-noactive" id="miSearch">
                                        <i class="fa fa-desktop" style="margin-right:7px"></i>Список звонков
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link waves-effect waves-light" href="/sms">
                                    <div class="menu-item-noactive" id="miFrequency">
                                        <i class="fa  fa-retweet" style="margin-right:7px"></i>Список СМС
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link waves-effect waves-light" href="/gps">
                                    <div class="menu-item-noactive" id="miQuantity">
                                        <i class="fa fa-car" style="margin-right:7px"></i>GPS трекинг
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item" style="float:right;">
                                <a class="nav-link waves-effect waves-light" href="~/user/logout">
                                    <div class="menu-item-noactive" id="miQuantity">
                                        <i class="fa  fa-close" style="margin-right:7px"></i>Выход
                                    </div>
                                </a>
                            </li>

                        </ul>


                    </div>
                    <!--/.Collapse content-->
                </div>
            </nav>
            <!--/.Navbar-->
        </header>
    }

    <main class="p-t-5" >
        <div class="container" >
            <div class="row" >
                <div class="col-lg-12" >
                    @RenderBody()
                </div>
            </div>
        </div>
   </main>
        <script src="~/content/js/tether.min.js"></script>
        <script src="~/content/js/bootstrap.min.js"></script>
        <script src="~/content/js/mdb.min.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>
</body>
</html>