<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contactPhoto"
        android:src="@drawable/photo_contact_empty"
        android:layout_width="65dp"
        android:layout_height="65dp" />

    <TextView
        android:id="@+id/senderName"
        android:textSize="23sp"
        android:text="Петров Вася"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/contactPhoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/messageText"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_alignBottom="@id/contactPhoto"
        android:text="Привет, как дела?"
        android:layout_toRightOf="@id/contactPhoto"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dateMessage"
        android:text="05/02/17"
        android:textSize="15sp"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timeMessage"
        android:text="16:22"
        android:textSize="18sp"
        android:layout_alignBaseline="@id/messageText"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>