<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contactPhoto"
        android:src="@drawable/photo_contact_empty"
        android:layout_width="65dp"
        android:layout_height="65dp" />

    <ImageView
        android:id="@+id/typeCall"
        android:src="@drawable/incoming"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/contactPhoto"
        android:layout_toEndOf="@+id/contactPhoto" />

    <TextView
        android:id="@+id/contactName"
        android:textSize="20sp"
        android:text="Петров Вася"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_toRightOf="@id/typeCall"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/duration"
        android:textSize="10sp"
        android:text="8 мин 10 сек"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phoneNumber"
        android:text="079888208"
        android:layout_toRightOf="@id/contactPhoto"
        android:layout_alignBottom="@id/contactPhoto"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="170dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dateTimeCall"
        android:text="05.02.2017 18:15"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>